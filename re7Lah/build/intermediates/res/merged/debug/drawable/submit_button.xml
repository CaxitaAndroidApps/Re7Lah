<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
	    <shape
		    android:shape="rectangle"   >
	
	        <gradient
		        android:angle="90"
		        android:endColor="@color/bon_violet"
		        android:startColor="@color/bon_violet"
		        android:type="linear" />
	   
	   	</shape>
	</item>
	
    <item android:state_pressed="true">
	    <shape
		    android:shape="rectangle"   >
	
	        <gradient
		        android:angle="90"
		        android:endColor="#8341B4"
		        android:startColor="#8341B4"
		        android:type="linear" />
	   
	   	</shape>
	</item>
    
    
</selector>